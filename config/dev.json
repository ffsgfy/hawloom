{
    "db": {
        "host": "${POSTGRES_HOST}",
        "port": "${POSTGRES_PORT}",
        "user": "${POSTGRES_USER}",
        "password": "${POSTGRES_PASSWORD}",
        "database": "${POSTGRES_USER}"
    },
    "http": {
        "bind_address": "127.0.0.1",
        "bind_port": "${HAWLOOM_PORT}"
    },
    "auth": {
        "key_size": 32,
        "token_ttl": 28800,
        "cookie": "auth"
    },
    "account": {
        "name_min_length": 4,
        "name_max_length": 36,
        "password_min_length": 6,
        "password_max_length": 48
    },
    "doc": {
        "title_max_length": 256,
        "vord_min_duration": 10
    }
}
